{% block body %}
    <form id="form-new-product" class="form-horizontal form-new-product">
        <fieldset>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="title">Product title *</label>
                <div class="col-md-6">
                    <input id="title" name="title" placeholder="Hawaii pizza with tomatoe sauce" class="form-control input-md" required="" type="text">

                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="link">Product link</label>
                <div class="col-md-6">
                    <input id="link" name="link" placeholder="http://www.chilipica.lt/products/pizzas/hawaii.html" class="form-control input-md" type="text">
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="price">Price *</label>
                <div class="col-md-2">
                    <input id="price" name="price" placeholder="1.00" class="form-control input-md" required="" type="text">

                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="quantity">Quantity *</label>
                <div class="col-md-2">
                    <input id="quantity" name="quantity" placeholder="1" class="form-control input-md" required="" type="text">

                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <button class="button btn btn-success btn-new-product">New product</button>
                </div>
            </div>
        </fieldset>
    </form>

{% endblock %}

<div class="col-md-12 product-info">
    <h3>{{ product.title }}</h3>
    <div class="col-md-4">
        Price: {{ product.price }} â‚¬
        <button class="btn btn-default btn-group-justified" onclick="decreaseQuantity({{ order.id }}, {{ product.id }});"> <span class="glyphicon glyphicon-minus"></span> </button>
    </div>
    <div class="col-md-4 product-quantity">
        <input id="product_quantity_{{ product.id }}" type="text" class="form-control text-center" onchange="changeQuantity({{ order.id }}, {{ product.id }});"
               value="{{ quantity }}">
    </div>
    <div class="col-md-4">
        {% if product.link %}<a href="{{ product.link }}" target="_blank">View product</a>{% else %}&nbsp;{% endif %}
        <button class="btn btn-default btn-group-justified" onclick="increaseQuantity({{ order.id }}, {{ product.id }});"> <span class="glyphicon glyphicon-plus"></span> </button>
    </div>
</div>
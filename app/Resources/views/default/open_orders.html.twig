{% extends 'base.html.twig' %}
{% block body %}
    {{ include('default/navigation_bar.html.twig') }}
    <div class="container">
        {% for order in orders %}
            {{ include('default/order.html.twig') }}
        {% endfor %}
    </div>
    <div class="container text-center">
        <br>
        {% if page_number != 1%}<div class="btn btn-danger text-center"><a href="{{ path('orders_open', {'page_number': page_number-1, 'per_page' : per_page  }) }}">Previous page</a></div>{% endif %}
        {% if orders|length > 0 %}<div class="btn btn-success text-center"><a href="{{ path('orders_open', {'page_number': page_number+1, 'per_page' : per_page }) }}">Next page</a></div>{% endif %}
        <br>
    </div>

{% endblock %}

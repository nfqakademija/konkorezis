{% extends 'base.html.twig' %}
{% block body %}
    {{ include('default/navigation_bar.html.twig') }}
    <div class="container">

        <form class="form-horizontal">
            <fieldset>

                <!-- Form Name -->
                <legend class="text-center">Create your order</legend>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="textinput">Order title*</label>
                    <div class="col-md-5">
                        <input id="textinput" name="textinput" placeholder="order title" class="form-control input-md" required="" type="text">

                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="textinput">Supplier*</label>
                    <div class="col-md-5">
                        <input id="textinput" name="textinput" placeholder="supplier title" class="form-control input-md" required="" type="text">

                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="textinput">Supplier link</label>
                    <div class="col-md-5">
                        <input id="textinput" name="textinput" placeholder="http://www.cilipica.lt" class="form-control input-md" type="text">

                    </div>
                </div>

                <!-- Textarea -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="textarea">Description*</label>
                    <div class="col-md-4">
                        <textarea class="form-control" id="textarea" name="textarea">Add your order description</textarea>
                    </div>
                </div>

                <!-- Button (Double) -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="button1id">Order date and time*</label>
                    <div class="col-md-8">
                        <button id="button1id" name="button1id" class="btn btn-success">Starts</button>
                        <button id="button2id" name="button2id" class="btn btn-danger">Ends</button>
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="textinput">Address*</label>
                    <div class="col-md-5">
                        <input id="textinput" name="textinput" placeholder="e.g. Didlaukio 59." class="form-control input-md" required="" type="text">

                    </div>
                </div>

                <!-- Button -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="singlebutton"></label>
                    <div class="col-md-4">
                        <button id="singlebutton" name="singlebutton" class="btn btn-default">Create Order</button>
                    </div>
                </div>

            </fieldset>
        </form>
    </div>
{% endblock %}
